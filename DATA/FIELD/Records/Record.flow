int shopAgain()
{
	OPEN_MSG_WIN();
	MSG( KeepShopping );
	//Close menu on Circle
	SEL_CHK_PAD(6,20);
	int select = SEL( ShopAgain );
	CLOSE_MSG_WIN();
	switch (select)
	{
		case 0: // Yes
			return -1;
		case 1: // No
			return -2;
		default:
			break;
	}
	return -2;
}