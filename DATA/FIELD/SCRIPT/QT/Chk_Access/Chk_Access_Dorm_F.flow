void entrance_to_dungeon()
{
    
    if ( ( BIT_CHK( 728 ) == 1 ) && ( BIT_CHK( 729 ) == 0 ) )
    {
        OPEN_MSG_WIN();
        MSG( BTLHERO_METIS_OK );
        SEL_CHK_PAD( 6, 1 );
        
        if ( SEL( BTLHERO_SEL ) == 0 )
        {
            MSG( BTLHERO_METIS_YES );
            CLOSE_MSG_WIN();
            FADE( 2, 0 );
            FADE_SYNC();
            NEXT_DAY();
            return;
        }
        else 
        {
            MSG( BTLHERO_METIS_NO );
            CLOSE_MSG_WIN();
        }

    }
    else 
    {
        FADE( 2, 0 );
        FADE_SYNC();
        SET_CNT( 1, 0 );
        
        if ( BIT_CHK( 473 ) == 0 )
        {
            CALL_EVENT( 462, 1, 0 );
            BIT_ON( 473 );
            FUNCTION_0128( 1, 21 );
            return;
        }

        FUNCTION_0128( 1, 0 );
        return;
    }

}

void entrance_to_velvetroom()
{
    FADE( 6, 30 );
    FADE_SYNC();
    CALL_FIELD( 5, 3, 0, 0 );
}

void counter_door()
{
    
    if ( BIT_CHK( 721 ) == 1 )
    {
        FUNCTION_0186( 15 );
        FADE( 6, 10 );
        FADE_SYNC();
        CALL_FIELD( 5, 1, 0, 0 );
        return;
    }
    else 
    {
        OPEN_MSG_WIN();
        MSG( COUNTER_DOOR );
        CLOSE_MSG_WIN();
    }

}

void downstair_2f()
{
    FADE( 2, 0 );
    FADE_SYNC();
    CALL_FIELD( 4, 10, 0, 0 );
}