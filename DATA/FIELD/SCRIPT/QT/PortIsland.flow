void PortStation()
{
	switch(GET_FIELD_MINOR())
	{
		case 1: // Port Island Station
			OPEN_MSG_WIN();
			MSG( Same );
			CLOSE_MSG_WIN();
			break;
		case 2: // Port Island Station Outskirts
			if(Chk_Access_PortIslandStation_002_001())
			{
				gotoPortStation();
