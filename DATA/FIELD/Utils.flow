void RandomP1() {
	int randomsong = AI_RND(p1_len - 1) + p1_start;
	if (GET_CNT(ShufflePool) == ShuffleAll) {
		if (randomsong == GET_CNT(1)) {
			Random();
		}
	}
	else if (GET_CNT(ShufflePool) == ShufflePersona {
		if (randomsong == GET_CNT(1)) {
			RandomPersona();
		}	
	}
	else {
		if (randomsong == GET_CNT(1)) {
			RandomP1();
		}
		SET_CNT(ShufflePool, ShuffleP1);
	}
	playRandomBGM(randomsong);
}

