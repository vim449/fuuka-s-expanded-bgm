void playBGM(int songid) {
	CALL_BGM(songid);
	SET_CNT(1, songid);
	SET_CNT(9999, 0);
	MSG(BASE_HUKA_ORDER_BGM_CHANGE_DO);
}

void playRandomBGM(int songid) {
	if (GET_CNT(9998) != 1) {
		if (GET_CNT(1) < 500 && (GET_CNT(1) < 102 || GET_CNT(1) > 105)) {
			SET_CNT(9999, 0);
		} else {
			CALL_BGM(songid);
			SET_CNT(1, songid);
			SET_CNT(9998, 0);
		}
	} else {
		CALL_BGM(songid);
		SET_CNT(1, songid);
		SET_CNT(9998, 0);
	}
}
